<?xml version="1.0"?>
<!DOCTYPE Configure PUBLIC "-//Jetty//Configure//EN" "http://www.eclipse.org/jetty/configure.dtd">

<Configure id="WebManagementConsole" class="org.eclipse.jetty.server.Server">

    <Call name="addConnector">
        <Arg>
            <New class="org.eclipse.jetty.server.nio.SelectChannelConnector">
                <Set name="port">8080</Set>
            </New>
        </Arg>
    </Call>

    <Set name="handler">
        <New class="org.eclipse.jetty.server.handler.HandlerCollection">
            <Set name="handlers">
                <Array type="org.eclipse.jetty.server.Handler">
                    <Item>
                        <New id="Contexts" class="org.eclipse.jetty.server.handler.ContextHandlerCollection"/>
                    </Item>
                    <Item>
                        <New id="DefaultHandler" class="org.eclipse.jetty.server.handler.DefaultHandler"/>
                    </Item>
                </Array>
            </Set>
        </New>
    </Set>

    <Call name="addBean">
        <Arg>
            <New id="DeploymentManager" class="org.eclipse.jetty.deploy.DeploymentManager">
                <Set name="contexts">
                    <Ref id="Contexts"/>
                </Set>
                <Call name="setContextAttribute">
                    <Arg>org.eclipse.jetty.server.webapp.ContainerIncludeJarPattern</Arg>
                    <Arg>.*/servlet-api-[^/]*\.jar$</Arg>
                </Call>
            </New>
        </Arg>
    </Call>

    <!-- JSP and servlets support -->
    <Ref id="DeploymentManager">
        <Call id="webappprovider" name="addAppProvider">
            <Arg>
                <New class="org.eclipse.jetty.deploy.providers.WebAppProvider">
                    <Set name="monitoredDirName">
                        <Property name="jetty.home" default="modules/WebManagementConsole.jar"/>
                        /webapps
                    </Set>
                    <Set name="defaultsDescriptor">
                        <Property name="jetty.home" default="modules/WebManagementConsole.jar"/>
                        /etc/webdefault.xml
                    </Set>
                    <Set name="contextXmlDir">
                        <Property name="jetty.home" default="modules/WebManagementConsole.jar"/>
                        /contexts
                    </Set>
                    <Set name="scanInterval">1</Set>
                    <!-- UNCOMMENT if extracting needed
                  <Set name="extractWars">true</Set> -->
                </New>
            </Arg>
        </Call>
    </Ref>


</Configure>